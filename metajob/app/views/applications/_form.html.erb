<%= form_for(@application) do |f| %>

    <div class="field">
    <%= f.label :full_name %> *<br />
    <%= f.text_field :full_name %>
  </div>
   <div class="field">
    <%= f.label :email %> *<br />
    <%= f.email_field :email %>
  </div>
   <div class="field">
    <%= f.label :github_link %><br />
    <%= f.text_field :github_link %>
  </div>
  <div class="field">
    <%= f.label :linkedin_link %><br />
    <%= f.text_field :linkedin_link %>
  </div>
  <div class="field">
    <%= f.label :resume %> *<br />
    <%= f.file_field :resume %>
  </div>

  <%= f.hidden_field :job_id, :value => params[:job_id] %>

  <div class="field">
    <%= f.label :ref_code %> *<br />
    <%= f.text_field :ref_code %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
