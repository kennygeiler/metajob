<% if params[:job_id] %>

Company: <%= @applied_job.company.name %> <br>
Location: <%= @applied_job.city %> <br>
Company description: <%= @applied_job.company.description %> <br>
Job description: <%= @applied_job.description %> <br>
Qualifications: <%= @applied_job.qualifications %> <br>

<% end %>

<%= form_for(@application) do |f| %>

    <div class="field">
    <%= f.label :full_name %> *<br />
    <%= f.text_field :full_name, :required => true %>
  </div>
   <div class="field">
    <%= f.label :email %> *<br />
    <%= f.email_field :email, :required => true %>
  </div>
   <div class="field">
    <%= f.label :github_link %><br />
    <%= f.text_field :github_link %>
  </div>
  <div class="field">
    <%= f.label :linkedin_link %><br />
    <%= f.text_field :linkedin_link %>
  </div>
  <div class="field">
    <%= f.label :resume %> *<br />
    <%= f.file_field :resume, :required => true %>
  </div>

  <%= f.hidden_field :job_id, :value => params[:job_id] %>

  <div class="field">
    <%= f.label :ref_code %> *<br />
    <%= f.text_field :ref_code, :required => true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
