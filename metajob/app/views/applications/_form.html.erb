<body id="test">

<div id="new-application">
<% if params[:job_id] %>
  <h3 class="app-head"><%= @applied_job.company.name %></h2>
  <%= link_to @applied_job.company.link, @applied_job.company.link %> <br>
  <i>Located in: <%= @applied_job.city %> </i>

<h4 class="app-head">About <%= @applied_job.company.name %> </h3>
<p><%= @applied_job.company.description %></p>

<h4 class="app-head">Position: <%= @applied_job.position %></h3>
<h5 class="app-head">What you'll do</h4>
<p><%= @applied_job.description %></p>

<h4 class="app-head">Qualifications</h3>
<p><%= @applied_job.qualifications %></p>


<h3 class="app-head">Application:</h3>
<div id="app-form">
<%= form_for(@application) do |f| %>
    <div class="field">
    <%= f.label :full_name %> *<br />
    <%= f.text_field :full_name, :required => true, class: "form-control input-md" %>
  </div>
  <br>
   <div class="field">
    <%= f.label :email %> *<br />
    <%= f.email_field :email, :required => true, class: "form-control input-md" %>
  </div>
  <br>
   <div class="field">
    <%= f.label :github_link %><br />
    <%= f.text_field :github_link, class: "form-control input-md" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :linkedin_link %><br />
    <%= f.text_field :linkedin_link, class: "form-control input-md" %>
  </div> <br>
  <div class="field">
    <%= f.label :resume %> *<br />
    <%= f.file_field :resume, :required => true%>
  </div>

  <br>

  <%= f.hidden_field :job_id, :value => params[:job_id] %>

  <div class="field">
    <%= f.label :ref_code %> *<br />
    <%= f.text_field :ref_code, :required => true, class: "form-control input-md" %>
  </div>

  <br>

  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary btn-md btn-block"  %>
  </div>
<% end %>

<% end %>
</div>
</div>

</body>