
<!--login modal-->
<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog login-dialog">
  <div class="modal-content">
      <div class="modal-header">
          <h1 class="text-center login-title">Close Job</h1>
      </div>
      <div class="modal-body">
       <% if current_company != nil %>
<%= form_for(@job, class: "form col-md-12 center-block") do |f| %>

   <div class="form-group">
    <%= f.label :position_filled %><br />
    <%= f.check_box :position_filled, {}, true, false %>
  </div>
  <div class="form-group">
    <%= f.label :filled_by_refferal %><br />
    <%= f.check_box :filled_by_refferal, {}, true, false %>
  </div>

    <%= f.hidden_field :company_id, :value => current_company.id %>

  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary btn-md btn-block" %>
  </div>
<% end %>

<% end %>
<%= link_to 'Back', jobs_path %>
      </div>
        </div>
  </div>
</div>
