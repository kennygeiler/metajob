<p id="search"><%= form_tag jobs_path, :method => 'get', class: "navbar-form index-search" do %>
  <div class="input-group">
      <%= text_field_tag :city, params[:city], class: "form-control", placeholder: " Search by City: New York" %>
        <div class="input-group-btn">
            <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
          </div>
  </div>
</p>
<% end %>
<% if @filtered_jobs != nil %>


  <% @filtered_jobs.each do |job| %>
    <%= job.position %>
    <%= job.city %>
  <% end %>



<% end %>



  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.position %></td>
        <td><%= job.company.name %></td>
        <td><%= job.position_filled %></td>
        <td># of applications <%= job.applications.count %></td>
        <td>application link: <a href="applications/new?job_id=<%=job.id%>">http://localhost:3000/applications/new?job_id<%=job.id%></a>

        <td><%= link_to 'Show', job %></td>
        <% if current_company != nil && current_company.id == job.company.id %>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

