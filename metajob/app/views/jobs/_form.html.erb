<div class="job-container">

<h2 class="app-head">Post a Job</h1>
<div id="app-form">
<% if current_company != nil %>
<%= form_for(@job) do |f| %>

   <div class="form-group">
    <%= f.label :position %><br />
    <%= f.text_field :position, class: "form-control input-md" %>
  </div>
   <div class="form-group">
    <%= f.label :ref_fee %> ($)<br />
    <%= f.text_field :ref_fee, class: "form-control input-md", placeholder: "1400" %>
  </div>
   <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, class: "form-control input-md" %>
  </div>
  <div class="form-group">
    <%= f.label :qualifications %><br />
    <%= f.text_area :qualifications, class: "form-control input-md" %>
  </div>
  <div class="form-group">
    <%= f.label :city %><br />
    <%= f.text_field :city, class: "form-control input-md" %>
  </div>

    <%= f.hidden_field :company_id, :value => current_company.id %>

  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary btn-md btn-block" %>
  </div>
<% end %>

<% end %>

</div>