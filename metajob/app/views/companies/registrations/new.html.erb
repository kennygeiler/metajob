<%= render "companies/shared/links" %>

<!--login modal-->
<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
  <div class="modal-content">
      <div class="modal-header">
          <h1 class="text-center login-title">Employer Sign Up</h1>
      </div>
      <div class="modal-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form col-md-12 center-block") do |f| %>
        <%= devise_error_messages! %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg" %>
  </div>

    <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: "form-control input-lg" %>
  </div>

  <div class="field">
    Website<br />
    <%= f.text_field :link, class: "form-control input-lg" %>
  </div>

    <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, class: "form-control input-lg" %>
  </div>

      <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block"  %>
  </div>
<% end %>
      </div>
        </div>
  </div>
</div>