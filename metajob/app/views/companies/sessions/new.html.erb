<!--login modal-->
<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
  <div class="modal-content">
      <div class="modal-header">
          <h1 class="text-center login-title">Employer Login</h1>
      </div>
      <div class="modal-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form col-md-12 center-block") do |f| %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block"  %>
  </div>
<% end %>
      </div>
        </div>
  </div>
</div>